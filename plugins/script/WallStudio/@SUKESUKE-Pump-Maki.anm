		for i = 0, tankSeg do
			ws_tank_buffer[i] = 0;
		end
	end
	if ws_hp_buffer == nil then
		ws_hp_buffer = {};
		for i = 0, hpSeg do
			ws_hp_buffer[i] = 0;
		end
	end
	if ws_timer_counter == nil then
		ws_timer_counter = 0;
	end
	if ws_setting == nil then
		ws_setting = {};
	end
	if false then
		ws_tankX = tankX;
